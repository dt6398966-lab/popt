<%- include('partials/header') %>

<section class="properties-list-page">
    <div class="container">
        <div class="page-header">
            <h1>Properties for <%= typeof filters !== 'undefined' && filters.transaction_type ? filters.transaction_type : 'Sale/Rent' %></h1>
            <p>Showing <%= typeof totalProperties !== 'undefined' ? totalProperties : '0' %> properties</p>
        </div>

        <div class="properties-layout">
            <!-- Filters Sidebar -->
            <aside class="filters-sidebar">
                <h3>Filters</h3>
                <form action="/properties" method="GET" id="filterForm">
                    <div class="filter-group">
                        <label>Property Type</label>
                        <select name="property_type">
                            <option value="">All Property Types</option>
                            <option value="Apartment" <%= typeof filters !== 'undefined' && filters.property_type === 'Apartment' ? 'selected' : '' %>>Apartments</option>
                            <option value="Villa" <%= typeof filters !== 'undefined' && filters.property_type === 'Villa' ? 'selected' : '' %>>Villas</option>
                            <option value="House" <%= typeof filters !== 'undefined' && filters.property_type === 'House' ? 'selected' : '' %>>Houses</option>
                            <option value="Plot" <%= typeof filters !== 'undefined' && filters.property_type === 'Plot' ? 'selected' : '' %>>Plots / Land</option>
                            <option value="Commercial" <%= typeof filters !== 'undefined' && filters.property_type === 'Commercial' ? 'selected' : '' %>>Commercial</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label>Price Range (₹)</label>
                        <input type="number" name="min_price" placeholder="Min Price" value="<%= typeof filters !== 'undefined' && filters.min_price ? filters.min_price : '' %>">
                        <input type="number" name="max_price" placeholder="Max Price" value="<%= typeof filters !== 'undefined' && filters.max_price ? filters.max_price : '' %>">
                    </div>

                    <div class="filter-group">
                        <label>Bedrooms</label>
                        <select name="bedrooms">
                            <option value="">Any BHK</option>
                            <option value="1" <%= typeof filters !== 'undefined' && filters.bedrooms === '1' ? 'selected' : '' %>>1 BHK</option>
                            <option value="2" <%= typeof filters !== 'undefined' && filters.bedrooms === '2' ? 'selected' : '' %>>2 BHK</option>
                            <option value="3" <%= typeof filters !== 'undefined' && filters.bedrooms === '3' ? 'selected' : '' %>>3 BHK</option>
                            <option value="4" <%= typeof filters !== 'undefined' && filters.bedrooms === '4' ? 'selected' : '' %>>4 BHK</option>
                            <option value="5" <%= typeof filters !== 'undefined' && filters.bedrooms === '5' ? 'selected' : '' %>>5+ BHK</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label>Location / City</label>
                        <input type="text" name="city" placeholder="Enter location or city" value="<%= typeof filters !== 'undefined' && filters.city ? filters.city : '' %>">
                    </div>

                    <button type="submit" class="btn-primary">Apply Filters</button>
                    <a href="/properties" class="btn-secondary">Clear Filters</a>
                </form>
            </aside>

            <!-- Properties Grid -->
            <div class="properties-grid-section">
                <% if (typeof properties !== 'undefined' && properties.length > 0) { %>
                    <div class="properties-grid">
                        <% properties.forEach(function(property) { %>
                            <div class="property-card">
                                <div class="property-image">
                                    <% if (property.images && property.images.length > 0) { %>
                                        <img src="<%= property.images[0] %>" alt="<%= property.title %>">
                                    <% } else { %>
                                        <img src="https://via.placeholder.com/400x300/F97316/FFFFFF?text=No+Image" alt="<%= property.title %>" style="width: 100%; height: 100%; object-fit: cover;">
                                    <% } %>
                                    <span class="property-badge <%= property.transaction_type === 'Sale' ? 'sale' : 'rent' %>"><%= property.transaction_type %></span>
                                </div>
                                <div class="property-content">
                                    <h3><a href="/properties/<%= property.id %>"><%= property.title %></a></h3>
                                    <p class="property-location"><i class="fas fa-map-marker-alt"></i> <%= property.city %>, <%= property.state %></p>
                                    <div class="property-specs">
                                        <% if (property.bedrooms > 0) { %>
                                            <span><i class="fas fa-bed"></i> <%= property.bedrooms %> BHK</span>
                                        <% } %>
                                        <% if (property.bathrooms > 0) { %>
                                            <span><i class="fas fa-bath"></i> <%= property.bathrooms %></span>
                                        <% } %>
                                        <span><i class="fas fa-vector-square"></i> <%= property.area %> sq.ft</span>
                                    </div>
                                    <div class="property-price">
                                        <span class="price">₹<%= parseFloat(property.price).toLocaleString('en-IN') %></span>
                                        <span class="price-type"><%= property.transaction_type %></span>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Pagination -->
                    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                        <div class="pagination">
                            <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                                <a href="/properties?page=<%= currentPage - 1 %>" class="page-link">Previous</a>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                                    <a href="/properties?page=<%= i %>" class="page-link <%= typeof currentPage !== 'undefined' && currentPage === i ? 'active' : '' %>"><%= i %></a>
                                <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                                    <span class="page-link">...</span>
                                <% } %>
                            <% } %>
                            
                            <% if (typeof currentPage !== 'undefined' && currentPage < totalPages) { %>
                                <a href="/properties?page=<%= currentPage + 1 %>" class="page-link">Next</a>
                            <% } %>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h3>No properties found</h3>
                        <p>We couldn't find any properties matching your filters. Try adjusting your search criteria or <a href="/properties">view all properties</a>.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>

